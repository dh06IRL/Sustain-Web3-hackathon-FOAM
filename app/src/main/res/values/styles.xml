<resources>

    <style name="DrawerTheme" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/card_accent_color</item>
        <item name="android:navigationBarColor">@color/card_accent_color</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowBackground">@color/bg_color</item>

        <item name="contentPadding">0dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="material_drawer_selected_text">@color/white_</item>
        <item name="android:textColor">@color/text_color</item>

        <item name="material_drawer_background">@color/white_overlay</item>
        <item name="material_drawer_selected">@color/white_overlay</item>
        <!--<item name="material_drawer_selected_legacy">@color/colorPrimaryDark</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

</resources>
